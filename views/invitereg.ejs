<% include partials/header %>

<section class="registerpage">
  <div class="container">
    <h1>Sign Up Invitation!</h1>
    <form action="/register" method="post">
      <div class="form-group">
        <input
          type="text"
          class="form-control"
          name="name"
          placeholder="name"
          value="<%= userinvite.name %>"
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          class="form-control"
          name="username"
          placeholder="username"
          value="<%=userinvite.username%>"
        />
      </div>
      <div class="form-group">
        <input
          type="password"
          class="form-control"
          name="password"
          placeholder="Password"
        />
      </div>
      <button type="submit" class="btn btn-primary">Register!</button>
    </form>
  </div>
</section>

<% include partials/footer %>
